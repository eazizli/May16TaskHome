@model List<Service>

@{
    int count = 0;
}
<div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Services</h1>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 d-flex justify-content-between">
                            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                            <div>
                                <a class="btn btn-success px-5" asp-controller="Service" asp-action="Create">Create</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>№</th>
                                            <th>Title</th>
                                            <th>Description</th>
                                            <th>Settings</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                        @foreach (Service item in Model)
                        {
                            <tr>
                                <td>@(++count)</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>
                                    <div class="d-flex justify-content-around">
                                            <a asp-action="Read" asp-controller="Service" asp-route-id="@item.Id" ><button class="btn btn-info">Detail</button></a>
                                        <form method="get" asp-action="Update" asp-route-id="@item.Id">
                                            <a ><button class=" btn btn-warning">Edit</button></a>
                                        </form>
                                        <form method="post" asp-action="Delete" asp-route-id="@item.Id">
                                            <a><button class="btn btn-danger">Delete</button></a>
                                        </form>
                                    </div>
                                </td>
                             </tr>
                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>